import { Icon } from "astro-icon/components";
import Playlist from "../components/Playlist.astro";
import Songbar from "../components/Songbar";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<div class="container">
			<div class="playlists">
				<h1>canciones recomendadas</h1>
				
				
				
				
			
			</div>
			<div>
				
				
				<slot />
			</div>
			<div class="partDerecha">
				<Songbar client:visible />
	
			</div>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #0d0d0d;
	}
		.playlists {
		background: #2b2b2b;
		color: #2b2b2b;
	
		width: 340px;
		min-width: 400px;
		max-width: 500px;
		height: 1000px;
		background: #fff
		border-radius: 16px;
		
		padding: 24px 16px;
		display: flex;
		flex-direction: column;
		align-items: self-start;
		position: sticky;
		top: 24px;
		height: fit-content;
		color: #fff
		overflow-y: auto;
		min-height: 1200px;
	}
	.partDerecha {
	background: #2b2b2b;
	width: 340px;
	min-width: 400px;
	max-width: 500px;
	height: 1000px;
	background: #c4c4c4
	border-radius: 16px;
	box-shadow: 0 4px 24px rgba(150, 44, 44, 0.2);
	padding: 24px 16px;
	display: flex;
	flex-direction: column;
	align-items: center;
	position: sticky;
	top: 24px;
	height: fit-content;
	color: # 000
	overflow-y: auto;
	min-height: 1200px;
}
.canciones {
	display: flex;
	flex-direction: column;
	gap: 32px;
	margin-top: 24px;
}
.container {
		display: flex;
		justify-content: space-between;
		gap: 24px;
		padding: 56px;
	}
	* {
		color: #fff !important;
	}
</style>
